<div class="navbar navbar-expand-sm navbar-light navbar-lewagon text-center" style="background-color: #FAF7F3">
  <%= link_to root_path, class: "navbar-brand" do %>
    <!-- Laptop version -->
    <div class="hide-on-small">
      <%= cl_image_tag "https://res.cloudinary.com/fogapothecary/image/upload/v1596652960/LOGO_FOG_2020_cropped_ptm3co.png", style: "width:380px", class: "py-3" %>
    </div>
    <!-- Mobile version -->
    <div class="hide-on-large">
      <%= cl_image_tag "https://res.cloudinary.com/fogapothecary/image/upload/v1596652960/LOGO_FOG_2020_cropped_ptm3co.png", style: "width:220px", class: "py-3" %>
    </div>
  <% end %>
  <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active mx-4">
        <h5><%= link_to "Philosophy", philosophies_path, class: "nav-link", style:"font-size: 18px"%></h5>
      </li>
      <li class="nav-item active mx-4">
        <h5><%= link_to "Products", products_path , class: "nav-link", style:"font-size: 18px"%></h5>
      </li>
      <li class="nav-item active mx-4">
        <h5><%= link_to "Stockist", stockists_path, class: "nav-link", style:"font-size: 18px"%></h5>
      </li>
      <li class="nav-item active mx-4">
        <h5><%= link_to "Ritual", journals_path, class: "nav-link", style:"font-size: 18px"%></h5>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/fogapothecary/image/upload/v1596465106/default_profile_kwhszl.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "List new product", new_product_path, class: "dropdown-item" %>
            <%= link_to "List new stockist", new_stockist_path, class: "dropdown-item" %>
            <%= link_to "List new ritual", new_journal_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>