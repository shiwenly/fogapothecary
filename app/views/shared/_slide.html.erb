<!-- Laptop version -->
<div class="hide-on-small ">
  <h3 class="text-center my-5" style="font-size: 30px">MOST POPULAR PRODUCTS</h3>
  <div class="slide-wrapper-laptop">
    <% @products.each do |product| %>
      <%= link_to products_path, style:"text-decoration: none; color: black" do %>
        <% if product.picture1.attached?  %>
          <div>
            <div class="slide-item">
              <%= cl_image_tag product.picture1.key, class: "rounded-top", style: "height:360px; object-position: center center; object-fit: cover; width: 100%"%>
            </div>
          </div>
        <% else %>
          <div>
            <div class="slide-item">
              <%= cl_image_tag @default_pic, class: "rounded-top slide-item", style: "height:360px; object-position: center center; object-fit: cover; width: 100%"%>
            </div>
          </div>
        <% end %>
        <p class="mt-3 text-center" style="font-size: 16px;"><%= product.name %></p>
      <% end %>
    <% end %>
  </div>
</div>
<!-- Mobile version -->
<div class="hide-on-large ">
  <h5 class="text-center my-5" style="">MOST POPULAR PRODUCTS</h5>
  <div class="slide-wrapper-mobile">
    <% @products.each do |product| %>
      <%= link_to products_path, style:"text-decoration: none; color: black" do %>
        <% if product.picture1.attached?  %>
          <div>
            <div class="slide-item">
              <%= cl_image_tag product.picture1.key, class: "rounded-top", style: "height:240px; object-position: center center; object-fit: cover; width: 100%"%>
            </div>
          </div>
        <% else %>
          <div>
            <div class="slide-item">
              <%= cl_image_tag @default_pic, class: "rounded-top slide-item", style: "height:240px; object-position: center center; object-fit: cover; width: 100%"%>
            </div>
          </div>
        <% end %>
        <p class="mt-3 text-center" style="font-size: 16px;"><%= product.name %></p>
      <% end %>
    <% end %>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>
<!-- Laptop version -->
<script>
  var slider = tns({
    container: '.slide-wrapper-laptop',
    mouseDrag: true,
    slideBy: "page",
    swipeAngle: false,
    speed: 400,
    gutter: 10,
    autoplay: false,
    controls: false,
    nav: false,
    responsive: {
      350: {
        items: 2,
        center: true,
      },
      500: {
        items: 4,
        center: true,
      }
    },
  });
</script>
<!-- Mobile version -->
<script>
  var slider = tns({
    container: '.slide-wrapper-mobile',
    mouseDrag: true,
    slideBy: "page",
    swipeAngle: false,
