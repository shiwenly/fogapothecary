<% if @page.banner_pic.attached? %>
  <!-- Laptop version -->
  <div class="container-fluid hide-on-small" style="margin: 0px" >
    <div class="row">
      <div class="col-12 col-md-6" style="height: 520px; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path @page.banner_pic.key, crop: :fill %>')">
      </div>
      <div class="col-12 col-md-6 d-flex align-items-center" style="background-color: rgba(0, 0, 0, 0.05)">
        <div class="p-5 mx-4">
          <div class="d-flex align-items-center mb-4">
            <h3 class="mb-0" style="font-size: 40px"><%= @page.title %></h3>
            <% if user_signed_in?%>
              <%= link_to "", edit_page_path(@page), class:"fas fa-edit ml-2" %>
            <% end %>
          </div>
          <p><%= simple_format(@page.description) %></p>
        </div>
      </div>
    </div>
  </div>
  <!-- MOBILE VERSION -->
  <div class="container-fluid hide-on-large" style="margin: 0px" >
    <div class="row">
      <div class="col-12 col-md-6" style="height: 360px; background-size: cover; background-position: center; background-image:linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path @page.banner_pic.key, crop: :fill %>')">
      </div>
      <div class="col-12 col-md-6 d-flex align-items-center" style="background-color: rgba(0, 0, 0, 0.05)">
        <div class="p-5">
          <div class="d-flex align-items-center mb-4">
            <h3 class="mb-0" style="font-size: 40px"><%= @page.title %></h3>
            <% if user_signed_in?%>
              <%= link_to "", edit_page_path(@page), class:"fas fa-edit ml-2" %>
            <% end %>
          </div>
          <p><%= simple_format(@page.description) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="text-center my-5 pt-5 px-3">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <p style=""><%= simple_format(@page.description1, style:"font-family: Playfair Display; font-size: 20px; letter-spacing: 0.1em") %></p>
    </div>
  </div>
</div>
