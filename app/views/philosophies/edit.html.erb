<h1 class="text-center mt-5 mb-4">Update philosophy page</h1>
<div class="container center">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center">
        <%= simple_form_for [@philosophy] do |f| %>
          <%= f.input :picture1, as: :file %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :description1 %>
          <%= f.input :description2 %>
          <%= f.input :description3 %>
          <%= f.input :title1 %>
          <%= f.submit "Update", class: "btn btn btn-yellow-mustard mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>