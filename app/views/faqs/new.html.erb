<h1 class="text-center mt-5 mb-4">Add a new FAQ</h1>
<div class="container center">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center">
        <%= simple_form_for [@faq] do |f| %>
          <%= f.input :question %>
          <%= f.input :answer %>
          <%= f.submit "Create", class: "btn btn btn-yellow-mustard mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>