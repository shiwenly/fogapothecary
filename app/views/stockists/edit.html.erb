<h1 class="text-center mt-5 mb-4">Update stockist</h1>
<div class="container center">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center">
        <%= simple_form_for [@stockist] do |f| %>
          <%= f.input :category, collection: ["Stockist", "Online Store"] %>
          <%= f.input :name %>
          <%= f.input :city %>
          <%= f.input :website %>
          <%= f.submit "Update", class: "btn btn btn-yellow-mustard mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>