<div class="">
  <div class="d-flex my-5 align-items-center justify-content-center" style="background-color: rgba(196, 196, 196, 0.23); height: 216px">
    <h3 style="font-size: 30px">STOCKIST</h3>
  </div>
  <div class="container">
    <h3 class="mt-5 py-5 text-center" style="font-size: 20px">ONLINE STORE</h3>
    <div class="row">
      <% @online_stores.each do |stockist| %>
        <div class="col-12 col-md-5 offset-md-1">
          <div class='mb-5'>
            <%= link_to "https://#{stockist.website}", target: :blank, style:"text-decoration: none"    do  %>
              <!-- -->
              <div class="d-flex mb-2 align-items-center">
                <h3 class="mb-0" style="font-size: 18px; color: black"><%= stockist.name %></h3>
                <% if user_signed_in? %>
                  <%= link_to "", edit_stockist_path(stockist), class:"fas fa-edit ml-2", style:"font-size: 14px" %>
                  <h5 class="m-0" style="font-size: 14px">/</h5>
                  <%= link_to '', stockist_path(stockist), method: :delete, data: { confirm: 'Are you sure you want to delete this stockist ?'}, class:"fas fa-trash", style:"font-size: 14px"  %>
                <% end %>
              </div>
              <p style="font-size: 16px; color: black"><%= stockist.website %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="border-top mt-5 py-5">
      <h3 class="my-5 text-center" style="font-size: 20px">STOCKIST</h3>
      <div class="row">
        <% @cities.each do |city| %>
          <% unless city.name.nil? || city.name == "" %>
            <div class="col-12 col-md-5 offset-md-1">
              <div class="d-flex mb-4 mt-5 align-items-center">
                <h3 class="m-0" style="font-size: 18px"><%= city.name.upcase %></h3>
                <% if user_signed_in? %>
                  <%= link_to '', city_path(city), method: :delete, data: { confirm: 'Are you sure you want to delete this stockist ?'}, class:"fas fa-trash ml-3", style:"font-size: 14px"  %>
                <% end %>
              </div>
              <% @stockists.each do |stockist| %>
                <% if stockist.city.upcase == city.name.upcase %>
                  <div class="mb-4">
                    <div class="d-flex mb-2 align-items-center">
                      <p class="mb-0" style="font-size: 16px"><strong></strong><%= stockist.name %></p>
                      <% if user_signed_in? %>
                        <%= link_to "", edit_stockist_path(stockist), class:"fas fa-edit ml-2", style:"font-size: 14px" %>
                        <h5 class="m-0" style="font-size: 14px">/</h5>
                        <%= link_to '', stockist_path(stockist), method: :delete, data: { confirm: 'Are you sure you want to delete this stockist ?'}, class:"fas fa-trash", style:"font-size: 14px"  %>
                      <% end %>
                    </div>
                    <p style="font-size: 16px"><%= stockist.website %></p>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <% if user_signed_in? %>
      <%= link_to "Add a city", new_city_path %>
    <% end %>
  </div>
</div>