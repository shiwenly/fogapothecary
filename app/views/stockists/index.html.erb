<div class="text-center">
  <div class="d-flex my-5 align-items-center justify-content-center" style="background-color: rgba(196, 196, 196, 0.23); height: 216px">
    <h3 style="font-size: 30px">STOCKIST</h3>
  </div>
  <h3 class="mt-5 py-5" style="font-size: 20px">ONLINE STORE</h3>
  <div class="row text-center">
    <% @online_stores.each do |stockist| %>
      <div class="col-12 col-md-6">
        <div class='mb-5'>
          <h3 style="font-size: 18px"><%= stockist.name %></h3>
          <p style="font-size: 16px"><%= stockist.website %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container border-top mt-5 py-5">
    <h3 class="my-5" style="font-size: 20px">STOCKIST</h3>
    <div class="row">
      <% @cities.each do |city| %>
        <% unless city.name.nil? || city.name == "" %>
          <div class="col-12 col-md-6">
            <h3 class="my-5" style="font-size: 18px"><%= city.name.upcase %></h3>
            <% @stockists.each do |stockist| %>
              <% if stockist.city == city.name.upcase %>
                <div class="mb-4">
                  <p class="mb-1" style="font-size: 16px"><strong></strong><%= stockist.name %></p>
                  <p style="font-size: 16px"><%= stockist.website %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>